---


const {title} = Astro.props

---


<section class="hero">
    <div class="hero__tittle">
        <div class="hero__box">
            <img class="hero__img" src="/icons/civilizations.svg" alt="civilitazions">
            <h1 class="hero__h1">{title}</h1>
        </div>
    </div>
</section>

<style>

    .hero{
        background:url(/img/default-title-bg.webp) ;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        height: 192px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-bottom: 3px solid;
        border-image: linear-gradient( to right, transparent,  rgba(184, 134, 45, 1),transparent) 1; 

    }

        .hero__tittle{
            height: 93px;
            min-width: 1104px;
            background: linear-gradient( 89deg , rgba(4, 32, 59, 0) 0% , rgba(0, 29, 52, 1) 28% , rgba(0, 29, 52, 1) 68% , rgba(4, 32, 59, 0) 100% );
            display: flex;
            justify-content: center;
            align-items: center;
            border: 4px solid;
            border-image: linear-gradient( to right, transparent,  rgba(184, 134, 45, 1),transparent) 1; 

        }

        .hero__box{
            display: flex;
            gap: 2rem;
            align-items: center;
            gap: 1rem;
        }


        .hero__img{
            height: 45px;

        }

        .hero__h1{
            font-size: 3rem;
            
        }


</style>